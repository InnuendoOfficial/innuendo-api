// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  email String @unique
  hash String

  firstname String?
  lastname String?

  reports Report[]
  @@map("users")
}

model IndicatorType {
  id Int @id @default(autoincrement())

  name String
  unit_measure UnitMeasure

  indicators Indicator[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Indicator {
  id Int @id @default(autoincrement())

  value IndicatorValue?

  indicator_type IndicatorType @relation(fields: [indicator_type_id], references: [id])
  report Report @relation(fields: [report_id], references: [id], onDelete: Cascade)

  indicator_type_id Int
  report_id Int
}

model IndicatorValue {
  id Int @id @default(autoincrement())

  int Int?
  string String?

  indicator Indicator @relation(fields: [indicator_id], references: [id], onDelete: Cascade)

  indicator_id Int @unique
}

model Report {
  id Int @id @default(autoincrement())

  date DateTime @default(now())
  indicators Indicator[]

  user User @relation(fields: [user_id], references: [id])
  user_id Int
}
model Prospect {
  id Int @id @default(autoincrement())

  email String
  name String
  object String
}

enum UnitMeasure {
  int
  string
}
