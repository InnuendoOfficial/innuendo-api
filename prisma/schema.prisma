// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "windows"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  email String @unique
  hash String

  first_name String?
  lastname String?

  @@map("users")
}

model IndicatorType {
  id Int @id @default(autoincrement())

  name String
  unit_measure UnitMeasure

  indicators Indicator[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model Indicator {
  id Int @id @default(autoincrement())

  value Json?

  indicator_type IndicatorType @relation(fields: [indicator_type_id], references: [id])
  indicator_type_id Int @unique
}

enum UnitMeasure {
  INT
  STRING
}